<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"> <button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
  <div class="card mt-4" style="width: 18rem; margin-left: 30%">
    <img class="card-img-top" src="http://localhost:3000/{{image}}" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">{{titulo}}</h5>
      <p class="card-text">{{descricao}}</p> <hr>
      <p class="card-text"> Categoria: {{categoria.nome}} </p> <hr>

        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar Postagem</button></a> <br>
        <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar Postagem</button></a>
    </div>
  </div>
{{else}}
    <h5>Nenhuma Postagem</h5>
{{/each}}

            