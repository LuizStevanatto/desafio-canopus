{{#each erros}}
    <div class="alert aler-danger">{{texto}}</div>
{{else}}

{{/each}}


<div class="card">
    <div class="card-body">
        <h4>Nova Postagem</h4>
        <form action="/admin/postagens/nova" method="post" enctype="multipart/form-data"> 
            <label for="titulo"> Título: </label>
            <input type="text" name="titulo" class="form-control" required>
            
            <label for="slug"> Slug: </label>
            <input type="text" name="slug" class="form-control" required>

            <label for="descricao"> Descrição: </label>
            <input type="text" name="descricao" class="form-control" required><hr>


            
            <input type="file" name="avatar" accept="image/* "> <br>
            
           <hr>


            <label for="categoria">Categoria</label>
                <select name="categoria" class="custom-select">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}

                    
                </select> <br> <br>



            {{!-- <button type="submit" class="btn btn-success mt-4">Criar Postagem</button> --}}
            <input type="submit" value="Criar Postagem">

        </form>
    </div>
</div>